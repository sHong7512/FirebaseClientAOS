<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/storedFCMTokenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Stored FCM TOKEN!"
        android:textSize="14dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tokenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="FCM TOKEN!"
        android:textSize="14dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/remoteConfigTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Remote Config!"
        android:textSize="14dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/getFCMTokenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Get FCMToken!"/>

    <Button
        android:id="@+id/pushAnalyticsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Push Log Analytics!"/>

    <Button
        android:id="@+id/getRemoteConfigButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Get Remote Config data"/>


</LinearLayout>